<!DOCTYPE html>
<html lang="en" ng-app="myApp">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>RecommendMe</title>
	<link rel="stylesheet" href="./css/styles.css">
	<link rel="stylesheet" href="./css/contact.css">
	<link rel="stylesheet" href="./css/loginStyles.css">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

</head>

<body ng-controller="controller">

<!--nav-bar-->
<div class="group1">
  <div class="header-wrap">
    <div class="header">
      <div class="nav-wrapper">
        <div class="logo">
          <span></span>
        </div>
        <div class="nav">
          <ul>
            <li> <a href="home">Home</a></li>
            <li> <a href="rooms">Chatroom</a></li>
            <li> <a href="about">About</a></li>
            <li> <a href="contact">Contact</a></li>
          </ul>
        </div>
      </div>
      <p class="logout-button-container">
        <a href="login"><input class="logout-button" type="submit" value="Logout"></a>
      </p>
    </div>
  </div>
</div>

<div class="contact-section">
  <div class="wrap">
    <h1>Want More Info?</h1>
    <div class="wrap">
      <div class="login-fieldset">

        <div class="login-box">
          <label for="inpEmail" class="login-screen-out">Your Name</label>
          <input type="text" id="enpEmail" name="inpEmail" class="contact-inp_comm" placeholder="Your Name" ng-model="contact.name">
        </div>
        <div class="login-box">
          <label for="inpEmail" class="login-screen-out">Email address</label>
          <input type="email" id="enpEmail" name="inpEmail" class="contact-inp_comm" placeholder="Email address" ng-model="contact.email">
        </div>
        <div class="login-box">
          <label for="inpEmail" class="login-screen-out">Messages</label>
          <input type="email" id="enpEmail" name="inpEmail" class="contact-inp_comm" placeholder="Messages" ng-model="contact.msg">
        </div>
      </div>
      <p class="acenter">
        <input ng-click="submitemail(contact)" class="contact-input" type="submit" class="b-submit" value="Submit">
      </p>
    </div>
  </div>
</div>

</body>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
<script src="../angular/app.js"></script>
<script src="../angular/service.js"></script>
